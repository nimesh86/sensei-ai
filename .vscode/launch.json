{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run SenseiAI Extension",
      "type": "pwa-extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: watch"  // if you're using a build step like esbuild or tsc --watch
    }
  ]
}
